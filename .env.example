# .env.example - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ============================================
# Required Configuration
# ============================================

# OpenAI API Key - Get from https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Redis Configuration
# ============================================

# Redis connection details (for agent messaging)
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# Orchestrator Configuration
# ============================================

# Orchestrator API URL (backend service)
# Use localhost for local development
# Use your server IP or domain for remote access
ORCHESTRATOR_URL=http://localhost:9000

# ============================================
# Frontend Configuration
# ============================================

# Vite environment variable for orchestrator connection
# This should match your orchestrator host
VITE_ORCHESTRATOR_IP=localhost

# For remote access (e.g., from another device):
# VITE_ORCHESTRATOR_IP=192.168.x.x

# ============================================
# Optional: Production Settings
# ============================================

# CORS allowed origins (comma-separated for production)
# Uncomment and set for production deployment
# ALLOWED_ORIGINS=http://localhost:5173,https://yourdomain.com

# Log level (debug, info, warning, error)
# LOG_LEVEL=info

# ============================================
# Action Server Configuration
# ============================================

# MCP Action Server Configuration
# The MCP server provides actions like send-email and read-emails
# Default: http://localhost:8000 (runs on same machine as orchestrator)
# MCP_SERVER_URL=http://localhost:8000

# Note: MCP servers typically don't require authentication
# If your action server requires auth, add token configuration in action_servers.json
